{
  "compilerOptions": {
    "target": "ES2016",        // 최종 JS 문법 수준: ECMAScript 2016
    "module": "ES2015",        // import/export 방식: ES 모듈 사용
    "rootDir": "./src",        // TS 소스코드가 있는 폴더
    "outDir": "./dist",        // 컴파일된 JS 파일을 저장할 폴더
    "esModuleInterop": true,   // CommonJS 모듈도 ES 모듈처럼 import 가능
    "forceConsistentCasingInFileNames": true, // 파일명 대소문자 일관성 체크
    "strict": true,            // 엄격한 타입 검사(가장 중요한 옵션!)
    "skipLibCheck": true,      // node_modules 안의 d.ts 파일은 검사 안 함
    "removeComments": true,    // 컴파일된 JS에서 주석 제거
    "noEmitOnError": false,    // 에러가 있어도 JS 파일을 생성할지 여부
    "noUnusedLocals": true,    // 쓰이지 않는 지역변수 있으면 에러
    "noUnusedParameters": true,// 쓰이지 않는 함수 매개변수 있으면 에러
    "noImplicitReturns": true, // 함수에서 return 누락시 에러
    "noFallthroughCasesInSwitch": true, // switch문에서 break 빼먹으면 에러
    "noUncheckedIndexedAccess": true // obj[key] 접근 시 undefined 체크 강제
  }
}
